import os
import sys
import socket
import odr.cmdconnection
import fdsend

CMD_SOCKET = '/var/run/odr/cmd.sock'

class flushedstream(object):
    def __init__(self, f):
        self.f = f
    def write(self, x):
        self.f.write(x)
        self.f.flush()
sys.stdout = flushedstream(sys.stdout)
sys.stderr = flushedstream(sys.stderr)

def write_ret(ret_f, val):
    ret_f.seek(0)
    ret_f.write('%d' % val);
    ret_f.flush()
    os.fsync(ret_f.fileno())

cfg_fn = os.environ['client_connect_config_file']
ret_fn = os.environ['client_connect_deferred_file']
full_username = os.environ['username']

cfg_f = open(cfg_fn, 'wb')
ret_f = open(ret_fn, 'wb')

s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
s.connect(CMD_SOCKET)
write_ret(ret_f, 3)

try:
    fdsend.sendfds(s, odr.cmdconnection.pack_cmd('request', {
            'full_username':full_username,
            'ret_file_idx':'0',
            'config_file_idx':'1'}), fds=[ret_f, cfg_f])

    ret, _ = fdsend.recvfds(s, 1024, numfds=0)
    print 'Received: %s' % ret
    if ret != 'OK':
        raise RuntimeError('starting dhcp request failed')
except:
    write_ret(ret_f, 1)
    raise
