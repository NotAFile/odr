import os
import sys
import socket
sys.path.append('../pydhcplib/pydhcplib')
import cmdconnection


class flushedstream(object):
    def __init__(self, f):
        self.f = f
    def write(self, x):
        self.f.write(x)
        self.f.flush()
sys.stdout = flushedstream(sys.stdout)
sys.stderr = flushedstream(sys.stderr)

def write_ret(ret_fn, val):
    ret_fp = open(ret_fn, 'wb')
    ret_fp.write('%d' % val);
    ret_fp.close()

cfg_fn = os.environ['client_connect_config_file']
ret_fn = os.environ['client_connect_deferred_file']
full_username = os.environ['username']

s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
s.connect('/tmp/bla.sock')
write_ret(ret_fn, 3)

try:
    s.send(cmdconnection.pack_cmd('request', {'full_username':full_username,
            'ret_file_name':ret_fn, 'config_file_name':cfg_fn}) + '\n')
    ret = s.recv(1024)
    print 'Received: %s' % ret
    if ret != 'OK\n':
        raise RuntimeError('starting dhcp request failed')
except:
    write_ret(ret_fn, 1)
    raise
